{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["@casper124578/eslint-config", "@casper124578/eslint-config-react", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "no-undef": "off",
    "@typescript-eslint/ban-ts-comment": "off",

    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "overrides": [
    {
      "files": ["./src/pages/api/**/*.ts", "./src/lib/socket.server.ts"],
      "rules": {
        "react-hooks/rules-of-hooks": "off",
        "react-hooks/exhaustive-deps": "off",
        "react/react-in-jsx-scope": "off"
      }
    }
  ]
}
